<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minWidth="450.0" resizable="false" title="Add Visit" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <AnchorPane prefHeight="500.0" prefWidth="500.0">
            <children>
               <VBox prefHeight="500.0" prefWidth="500.0" styleClass="background">
                  <children>
                     <Label styleClass="label-bright" text="Prescription :" />
                     <TextArea fx:id="medicine" prefHeight="65.0" prefWidth="483.0" promptText="Prescription given to patient." styleClass="text-field-visit" wrapText="true" VBox.vgrow="SOMETIMES" />
                     <Label styleClass="label-bright" text="Diagnosis :" />
                     <TextArea fx:id="diagnosis" prefHeight="65.0" prefWidth="483.0" promptText="Diagnosis of patient." styleClass="text-field-visit" wrapText="true" VBox.vgrow="SOMETIMES" />
                     <Label styleClass="label-bright" text="Remarks :" />
                     <TextArea fx:id="remarks" prefHeight="200.0" prefWidth="200.0" promptText="Additional Remarks." styleClass="text-field-visit" wrapText="true" VBox.vgrow="SOMETIMES" />
                     <HBox prefHeight="33.0" prefWidth="480.0">
                        <children>
                           <VBox maxHeight="33.0" maxWidth="1.7976931348623157E308" minHeight="33.0" minWidth="-Infinity" prefHeight="33.0" prefWidth="399.0">
                              <children>
                                 <Label styleClass="label-bright-footnote" text="SHIFT + Tab  -  Previous Field (Up)" />
                                 <Label styleClass="label-bright-footnote" text="CTRL + Tab  -  Next Field (Down)" />
                              </children>
                              <HBox.margin>
                                 <Insets />
                              </HBox.margin>
                              <padding>
                                 <Insets left="5.0" />
                              </padding>
                           </VBox>
                           <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveReport" text="Save" />
                        </children>
                        <VBox.margin>
                           <Insets top="4.0" />
                        </VBox.margin>
                     </HBox>
                  </children>
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <padding>
                     <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
               </VBox>
            </children></AnchorPane>
         <stylesheets>
            <URL value="@DarkTheme.css" />
            <URL value="@Extensions.css" />
         </stylesheets>
        </Scene>
    </scene>
</fx:root>
