<fx:root resizable="false" title="Help" type="javafx.stage.Stage" minWidth="450" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/help_icon.png" />
    </icons>
    <scene>
        <Scene>
            <VBox alignment="CENTER_LEFT">
                <children>
                    <!-- Add Name Label -->
                    <Label text="Prescription : "/>

                    <!-- Add Name Text Field -->
                    <TextArea fx:id="medicine" prefHeight="100" wrapText="true"/>


                    <!-- Add Email Label -->
                    <Label text="Diagnosis : "/>
                    <!-- Add Email Text Field -->
                    <TextArea fx:id="diagnosis" prefHeight="100"/>

                    <!-- Add Password Label -->
                    <Label text="Additional remarks : "/>
                    <!-- Add Email Text Field -->
                    <TextArea fx:id="remarks" prefHeight="100"/>

                    <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveReport" text="save">
                        <HBox.margin>
                            <Insets left="5.0" />
                        </HBox.margin>
                    </Button>

                </children>
                <opaqueInsets>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </opaqueInsets>
                <padding>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </padding>
            </VBox>
        </Scene>
    </scene>
</fx:root>
