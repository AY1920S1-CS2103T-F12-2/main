@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Interface Ui <<Interface>>
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class HelpWindow
Class VisitRecordWindow
Class ProfileWindow
Class ResultDisplay
Class PersonListPanel
Class ReminderPanel
Class VisitListPanel
Class PersonCard
Class VisitCard
Class ReminderCard
Class CommandBox
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> MainWindow
UiManager -down-> VisitRecordWindow
UiManager -down-> ProfileWindow
MainWindow --> HelpWindow
MainWindow *-down-> CommandBox
MainWindow *-down-> ResultDisplay
MainWindow *-down-> PersonListPanel
MainWindow *-down-> ReminderPanel

PersonListPanel -down-> PersonCard
ReminderPanel -down-> ReminderCard
VisitListPanel -down-> VisitCard

MainWindow -left-|> UiPart

ResultDisplay --|> UiPart
CommandBox --|> UiPart
PersonListPanel --|> UiPart
PersonCard --|> UiPart
HelpWindow -down-|> UiPart
ReminderPanel -down-|> UiPart
ReminderCard -down-|> UiPart
VisitListPanel -down-|> UiPart
VisitCard -down-|> UiPart

PersonCard ..> Model
UiManager -right-> Logic
MainWindow -left-> Logic

MainWindow -[hidden]left- VisitRecordWindow
VisitRecordWindow -[hidden]left- ProfileWindow
PersonListPanel -[hidden]left- HelpWindow
HelpWindow -[hidden]left- CommandBox
CommandBox -[hidden]left- ResultDisplay
ResultDisplay -[hidden]left- ReminderPanel
ReminderPanel -[hidden]left- VisitListPanel

MainWindow -[hidden]-|> UiPart
@enduml
